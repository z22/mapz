<!DOCTYPE html>
<html>
<head>
  <title>Mapz</title>
<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <!-- Foundation -->
  <%= javascript_include_tag "vendor/modernizr" %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash#{name}" %>
  <% end %>



<!-- Facebook button in drop down menu -->
<div id="fb-root"></div>

<script>
(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));
</script>

<!-- Navigation Bar -->
<!-- <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation"> -->
  <nav class="navbar navbar-inverse" role="navigation">
  <ul class="nav navbar-nav">
  <li><a href="new.html" class="brand">
<img src="#"></a></li>
  <li><%= link_to 'All Users', users_path %></li>
  <li><%= link_to "Your Friends", friendships_path %></li>
  <li><%= link_to "Your Groups", groups_path %></li>
  <li><a href="#">Calendar</a></li>
  <li><%= link_to "Let's Chat", chats_path %></li>
  <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><% if current_user %><%= current_user.name %><% end %><b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li class="socials"><g:plusone annotation="inline" width="150"></g:plusone></li>
          <li class="socials"><div class="fb-like" data-href="https://developers.facebook.com/docs/plugins/" data-width="The pixel width of the plugin" data-height="The pixel height of the plugin" data-colorscheme="light" data-layout="standard" data-action="like" data-show-faces="true" data-send="false"></div></li>
          <li class="socials"><a href="https://twitter.com/share" class="twitter-share-button">Tweet</a>
<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script></li>
       </ul>
      </li>

    <% if current_user %>
      <% if current_user.provider.eql?("twitter") %>
        <li id="logged-in-as">Logged in using Twitter as <%= current_user.name %></li>
      <% else %>
        <li id="logged-in-as">Logged in as <%= current_user.name %></li>
      <% end %>
      <li><%= link_to 'Log Out', log_out_path %>
    <% else %>
      <li><%= link_to 'Log In', log_in_path %></li>
      <li><%= link_to 'Sign Up', sign_up_path %></li>
      <li><%= link_to "Sign in with Twitter", "/auth/twitter" %></li>
    <% end %>

  </ul>
</nav>

<%= yield %>

<!-- Twitter button in drop down menu -->
<script>
(function() {
    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
    po.src = 'https://apis.google.com/js/plusone.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
  })();
</script>

</body>
</html>
